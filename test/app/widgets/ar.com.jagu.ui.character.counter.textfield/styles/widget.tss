"#widget":{
	height: Ti.UI.SIZE,
	width:Ti.UI.FILL
},
".ar.com.jagu.ui.character.counter.textfield.text":{
	font:{
		fontSize: '16dp',
		fontFamily: 'Roboto Regular'
	},
	color: 'white',
	height: Ti.UI.SIZE,
	width:Ti.UI.FILL,
	backgroundImage: 'none',
	backgroundDisabledImage: 'none',
	backgroundFocusedImage: 'none'
},
"#text":{
	autocorrect: false,
	textAlign:Ti.UI.TEXT_ALIGNMENT_LEFT
},
"#text[platform=android]":{
	top: '8dp'
},
"#text[platform=ios]":{
	top: '16dp'
},
"#divider":{
	height: '1dp',
	width:Ti.UI.FILL,
	top: '40dp',
	bottom: '8dp'
},
"#divider[platform=android]":{
	left: '12dp'
},
"#counter":{
	font:{
		fontFamily: 'Roboto Regular',
		fontSize: '12dp'
	},
	right: 0,
	top: '48dp',
	width:Ti.UI.SIZE,
	height:Ti.UI.SIZE,
	backgroundImage: 'none'
},
"#hintText[platform=ios]":{
	top: '16dp',
	color: '#9E9E9E'
}

